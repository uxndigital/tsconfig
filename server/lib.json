{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Server Library",
  "extends": "../base.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "composite": true,
    "incremental": true,
    "target": "ES2022",
    "lib": [
      "ESNext"
    ]
  }
}
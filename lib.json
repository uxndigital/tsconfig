{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Lib",
  "extends": "./base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}